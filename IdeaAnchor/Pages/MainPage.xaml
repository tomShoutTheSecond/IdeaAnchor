<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="IdeaAnchor.MainPage">
    
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource ColorVeryDarkGrey}" StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="New" Clicked="CreateNewIdea" />
    </ContentPage.ToolbarItems>
			 
    <Grid>
        <VerticalStackLayout 
            Spacing="16" 
            Padding="32,0" 
            VerticalOptions="Center">

            <Image
                Source="anchor.png"
                HeightRequest="200"
                HorizontalOptions="Center" />
                
            <Label 
                Text="IdeaAnchor"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label 
                Text="Built with .NET Maui"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>

        <Border x:Name="BorderMyIdeas" Margin="16" BackgroundColor="{StaticResource ColorDarkGrey}" StrokeThickness="0" VerticalOptions="Start">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>

            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="GoToMyIdeas"/>
            </Border.GestureRecognizers>

            <Grid Padding="32">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Text="My Ideas" FontSize="18" VerticalTextAlignment="Center" />

                <Image Grid.Column="1" Source="chevron_right.png"/>

            </Grid>
        </Border>
    </Grid>
 
</ContentPage>

